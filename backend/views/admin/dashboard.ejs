<% layout('admin/layout') -%>
<% pageTitle = 'Dashboard' %>
<% path = '/admin' %>

<div class="text-center py-5">
  <h1 class="display-3 fw-bold text-danger">
    <i class="fas fa-crown text-warning"></i><br>ADMIN PANEL - LADY MODE
  </h1>
  <h2 class="text-primary mt-4">Xin chào <%= user?.username || 'Admin' %>!</h2>
  <p class="lead">Chào mừng bạn đến với trung tâm điều khiển</p>
  
  <div class="row mt-5 justify-content-center">
    <div class="col-md-5">
      <div class="card text-white bg-gradient shadow-lg border-0" style="background: linear-gradient(135deg, #667eea, #764ba2);">
        <div class="card-body p-5 text-center">
          <i class="fas fa-box fa-3x mb-3"></i>
          <h3 class="fw-bold">QUẢN LÝ SẢN PHẨM</h3>
          <a href="/admin/products" class="btn btn-light btn-lg px-5 mt-3 shadow">Vào ngay</a>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <div class="card text-white bg-gradient shadow-lg border-0" style="background: linear-gradient(135deg, #f093fb, #f5576c);">
        <div class="card-body p-5 text-center">
          <i class="fas fa-shopping-cart fa-3x mb-3"></i>
          <h3 class="fw-bold">QUẢN LÝ ĐƠN HÀNG</h3>
          <a href="/admin/orders" class="btn btn-light btn-lg px-5 mt-3 shadow">Xem đơn</a>
        </div>
      </div>
    </div>
  </div>
</div>