<%- include('partials/header') %>

<div class="container py-5 min-vh-100">
  <div class="row">
    <div class="col-12">
      <h2 class="display-5 fw-bold text-primary mb-4">
        <i class="fas fa-search me-3"></i>Kết quả tìm kiếm
      </h2>

      <!-- Hiển thị thông báo tìm kiếm -->
      <div class="alert alert-info fs-5">
        <% if (query && query.trim() !== '') { %>
          <% if (products.length > 0) { %>
            Tìm thấy <strong><%= products.length %></strong> sản phẩm cho từ khóa "<strong><%= query %></strong>"
          <% } else { %>
            Không tìm thấy sản phẩm nào cho "<strong><%= query %></strong>"
          <% } %>
        <% } else { %>
          Vui lòng nhập từ khóa để tìm kiếm
        <% } %>
      </div>

      <!-- Danh sách sản phẩm tìm được -->
      <% if (products && products.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
          <% products.forEach(product => { %>
            <div class="col">
              <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden hover-card">
                <div class="position-relative">
                  <img src="<%= product.image %>" 
                       class="card-img-top" 
                       style="height: 280px; object-fit: contain; background: #f8f9fa;"
                       alt="<%= product.name %>"
                       onerror="this.src='https://via.placeholder.com/600x600?text=Ảnh+không+tải+được'">
                  <span class="badge bg-danger position-absolute top-0 end-0 m-3 px-3 py-2 rounded-pill">
                    Hot
                  </span>
                </div>
                <div class="card-body d-flex flex-column p-4">
                  <h5 class="card-title fw-bold text-dark"><%= product.name %></h5>
                  <p class="text-muted small flex-grow-1"><%= product.description %></p>
                  <div class="mt-auto">
                    <h4 class="text-danger fw-bold mb-3">
                      <%= product.price.toLocaleString('vi-VN') %>₫
                    </h4>
                    <div class="d-flex gap-2">
                      <a href="/product/<%= product._id %>" 
                         class="btn btn-outline-primary rounded-pill flex-fill">
                        Xem chi tiết
                      </a>
                      <form action="/cart/add/<%= product._id %>" method="POST" class="d-inline">
                        <button class="btn btn-warning rounded-pill shadow-sm">
                          Thêm
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else if (query && query.trim() !== '') { %>
        <!-- Không tìm thấy -->
        <div class="text-center py-5">
          <img src="https://cdni.iconscout.com/illustration/premium/thumb/nothing-here-5383136-4492951.png" 
               width="300" alt="Không tìm thấy" class="mb-4">
          <h4 class="text-muted">Không tìm thấy sản phẩm nào</h4>
          <p class="text-muted">Thử tìm với từ khóa khác nhé!</p>
          <a href="/" class="btn btn-primary btn-lg mt-3 rounded-pill px-5">
            Quay lại trang chủ
          </a>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>