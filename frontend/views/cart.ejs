<%- include('partials/header') %>

<div class="container py-5">
  <h1 class="display-5 fw-bold text-center mb-5 text-primary">
    Giỏ hàng của bạn
  </h1>

  <% if (!cart || cart.length === 0) { %>
    <div class="text-center py-5">
      <img src="https://cdni.iconscout.com/illustration/premium/thumb/empty-cart-4816553-4009553.png" 
           alt="Giỏ hàng trống" width="300" class="mb-4">
      <h3 class="text-muted">Giỏ hàng đang trống!</h3>
      <a href="/" class="btn btn-success btn-lg px-5 mt-3">
        Mua sắm ngay nào!
      </a>
    </div>
  <% } else { %>

    <div class="row g-4">
      <!-- Danh sách sản phẩm -->
      <div class="col-lg-8">
        <% cart.forEach((item, index) => { %>
          <div class="card mb-3 shadow-sm border-0 rounded-4 overflow-hidden">
            <div class="row g-0 align-items-center">
              <div class="col-4 col-md-3">
                <img src="<%= item.product.image %>" 
                     class="img-fluid rounded-start" 
                     style="height: 180px; object-fit: cover;" 
                     alt="<%= item.product.name %>">
              </div>
              <div class="col-8 col-md-9">
                <div class="card-body py-4 px-4">
                  <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1 me-3">
                      <h5 class="fw-bold mb-1"><%= item.product.name %></h5>
                      <p class="text-muted small mb-2"><%= item.product.description %></p>
                      <p class="text-danger fw-bold fs-5 mb-0">
                        <%= item.product.price.toLocaleString('vi-VN') %>₫
                      </p>
                    </div>
                    <div class="text-end">
                      <!-- Nút xóa -->
                      <form action="/cart/remove/<%= item.product._id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle" 
                                title="Xóa khỏi giỏ hàng">
                          ×
                        </button>
                      </form>
                    </div>
                  </div>

                  <div class="mt-3 d-flex align-items-center gap-3">
                    <span class="text-muted">Số lượng:</span>
                    <div class="btn-group">
                      <form action="/cart/update/<%= item.product._id %>" method="POST" class="d-inline">
                        <input type="hidden" name="qty" value="<%= item.qty - 1 %>">
                        <button type="submit" class="btn btn-outline-secondary <%= item.qty <= 1 ? 'disabled' : '' %>">
                          −
                        </button>
                      </form>
                      <span class="btn btn-white px-4"><%= item.qty %></span>
                      <form action="/cart/update/<%= item.product._id %>" method="POST" class="d-inline">
                        <input type="hidden" name="qty" value="<%= item.qty + 1 %>">
                        <button type="submit" class="btn btn-outline-secondary">+</button>
                      </form>
                    </div>
                    <strong class="ms-auto text-primary fs-5">
                      <%= (item.product.price * item.qty).toLocaleString('vi-VN') %>₫
                    </strong>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Tổng tiền + Thanh toán -->
      <div class="col-lg-4">
        <div class="card shadow-lg border-0 rounded-4 sticky-top" style="top: 20px;">
          <div class="card-body p-4">
            <h4 class="fw-bold mb-4">Tóm tắt đơn hàng</h4>
            
            <div class="d-flex justify-content-between mb-3">
              <span>Tạm tính (<%= cart.length %> sản phẩm)</span>
              <strong><%= total.toLocaleString('vi-VN') %>₫</strong>
            </div>
            <div class="d-flex justify-content-between mb-3">
              <span>Phí vận chuyển</span>
              <span class="text-success">Miễn phí</span>
            </div>
            <hr>
            <div class="d-flex justify-content-between mb-4">
              <h5 class="fw-bold">Tổng cộng</h5>
              <h4 class="text-danger fw-bold"><%= total.toLocaleString('vi-VN') %>₫</h4>
            </div>

            <!-- CHỈ HIỆN NÚT THANH TOÁN KHI ĐÃ ĐĂNG NHẬP -->
            <% if (user) { %>
              <a href="/payment/momo" class="btn btn-danger btn-lg w-100 rounded-pill shadow-lg py-3 fw-bold fs-5">
                Thanh toán bằng MoMo
              </a>
              <p class="text-center mt-3 text-muted small">
                Đã đăng nhập: <strong><%= user.username %></strong>
              </p>
            <% } else { %>
              <div class="text-center p-4 bg-light rounded-4">
                <img src="https://cdni.iconscout.com/illustration/premium/thumb/user-login-4268419-3551800.png" 
                     width="100" class="mb-3">
                <h5 class="text-danger">Bạn cần đăng nhập!</h5>
                <p class="text-muted small">Để thanh toán an toàn và nhanh chóng</p>
                <a href="/auth/login?returnUrl=/payment/momo" 
                   class="btn btn-primary btn-lg rounded-pill px-5 shadow">
                  Đăng nhập ngay
                </a>
                <div class="mt-3">
                  <small>Chưa có tài khoản? 
                    <a href="/auth/register" class="text-decoration-underline">Đăng ký</a>
                  </small>
                </div>
              </div>
            <% } %>

            <div class="mt-4 text-center">
              <a href="/" class="btn btn-outline-secondary rounded-pill">
                ← Tiếp tục mua sắm
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>