<%- include('partials/header') %>

<div class="container py-5 min-vh-100">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold" style="color:#A88CFF;">
  <i class="fas fa-headset me-3"></i>Liên Hệ Lady Mode
</h1>

        <p class="lead text-muted">Chúng tôi luôn sẵn sàng hỗ trợ bạn 24/7</p>
      </div>

      <!-- Thông báo -->
      <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show">
          <i class="fas fa-check-circle"></i> <%= success %>
          <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>
      <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show">
          <i class="fas fa-exclamation-triangle"></i> <%= error %>
          <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <div class="row g-5">
        <!-- Form liên hệ -->
        <div class="col-lg-7">
          <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-5">
              <h3 class="mb-4">Gửi tin nhắn cho chúng tôi</h3>
              <form action="/contact" method="POST">
                <div class="mb-3">
                  <label class="form-label fw-bold">Họ và tên *</label>
                  <input type="text" name="name" class="form-control form-control-lg rounded-pill" required>
                </div>
                <div class="mb-3">
                  <label class="form-label fw-bold">Email *</label>
                  <input type="email" name="email" class="form-control form-control-lg rounded-pill" required>
                </div>
                <div class="mb-3">
                  <label class="form-label fw-bold">Số điện thoại</label>
                  <input type="text" name="phone" class="form-control form-control-lg rounded-pill">
                </div>
                <div class="mb-4">
                  <label class="form-label fw-bold">Tin nhắn *</label>
                  <textarea name="message" rows="6" class="form-control rounded-4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill shadow-lg">
                  <i class="fas fa-paper-plane me-2"></i>Gửi Tin Nhắn
                </button>
              </form>
            </div>
          </div>
        </div>

        <!-- Thông tin liên hệ -->
        <div class="col-lg-5">
          <div class="card shadow-lg border-0 rounded-4 h-100">
            <div class="card-body p-5">
              <h3 class="mb-4">Thông tin liên hệ</h3>
              <div class="d-flex align-items-center mb-4">
                <div class="bg-primary rounded-circle p-3 text-white me-3">
                  <i class="fas fa-map-marker-alt fa-lg"></i>
                </div>
                <div>
                  <h5 class="mb-0">Địa chỉ</h5>
                  <p class="text-muted mb-0">12 Tiên Sơn 14, Quận Hải Châu, TP.Đà Nẵng</p>
                </div>
              </div>
              <div class="d-flex align-items-center mb-4">
                <div class="bg-success rounded-circle p-3 text-white me-3">
                  <i class="fas fa-phone fa-lg"></i>
                </div>
                <div>
                  <h5 class="mb-0">Hotline</h5>
                  <p class="text-muted mb-0">0972116762 (24/7)</p>
                </div>
              </div>
              <div class="d-flex align-items-center mb-4">
                <div class="bg-danger rounded-circle p-3 text-white me-3">
                  <i class="fas fa-envelope fa-lg"></i>
                </div>
                <div>
                  <h5 class="mb-0">Email</h5>
                  <p class="text-muted mb-0">support@ladymode.vn</p>
                </div>
              </div>
              <div class="d-flex align-items-center">
                <div class="bg-warning rounded-circle p-3 text-white me-3">
                  <i class="fas fa-clock fa-lg"></i>
                </div>
                <div>
                  <h5 class="mb-0">Giờ làm việc</h5>
                  <p class="text-muted mb-0">8:00 - 22:00 (Tất cả các ngày)</p>
                </div>
              </div>

              <hr class="my-4">
              <h5>Theo dõi chúng tôi</h5>
              <div class="d-flex gap-3 fs-2">
                <a href="#" class="text-primary"><i class="fab fa-facebook"></i></a>
                <a href="#" class="text-danger"><i class="fab fa-tiktok"></i></a>
                <a href="#" class="text-warning"><i class="fab fa-youtube"></i></a>
                <a href="#" class="text-info"><i class="fab fa-instagram"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>