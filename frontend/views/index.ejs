<%- include('partials/header') %>

<div id="products" class="row g-4 mt-4">
  <% products.forEach(product => { %>
    <div class="col-md-6 col-lg-4 col-xl-3">
      <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden hover-card">
        <div class="position-relative">
          <img src="<%= product.image %>" class="card-img-top" 
               style="height: 280px; object-fit: cover;" alt="<%= product.name %>">
          <div class="badge bg-danger position-absolute top-0 end-0 m-3 px-3 py-2 rounded-pill">
            <i class="fas fa-fire"></i> Hot
          </div>
        </div>
        <div class="card-body d-flex flex-column p-4">
          <h5 class="card-title fw-bold text-dark"><%= product.name %></h5>
          <p class="text-muted flex-grow-1 small"><%= product.description %></p>
          <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h4 class="text-danger fw-bold mb-0"><%= product.price.toLocaleString('vi-VN') %>₫</h4>
              <span class="text-success small"><i class="fas fa-shipping-fast"></i> Freeship</span>
            </div>
            <div class="d-grid gap-2 d-md-flex">
              <a href="/product/<%= product._id %>" class="btn btn-outline-primary rounded-pill">
                <i class="fas fa-eye"></i> Xem chi tiết
              </a>
              <form action="/cart/add/<%= product._id %>" method="POST" class="d-inline">
                <button class="btn btn-warning rounded-pill shadow-sm">
                  <i class="fas fa-cart-plus"></i> Thêm giỏ
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<%- include('partials/footer') %>
</body>
</html>