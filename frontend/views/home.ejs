<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Lady Mode - Siêu thị công nghệ</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <style>
    body { 
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
    }
    .navbar { box-shadow: 0 4px 20px rgba(0,0,0,0.3); }
    .card { 
      transition: all 0.4s; 
      border: none; 
      border-radius: 15px; 
      overflow: hidden;
    }
    .card:hover { 
      transform: translateY(-15px); 
      box-shadow: 0 20px 40px rgba(0,0,0,0.4)!important; 
    }
    .card img { 
      height: 250px; 
      object-fit: contain; 
      background: #f8f9fa; 
      padding: 15px;
    }
    .price { 
      font-size: 1.6rem; 
      color: #e74c3c; 
      font-weight: bold; 
    }
    .btn-admin { background: #ff6b6b; border: none; }
    .btn-admin:hover { background: #ff5252; }
  </style>
</head>
<body class="text-white">

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand fs-3 fw-bold" href="/">Lady Mode</a>
    <div>
      <% if (user) { %>
        <span class="me-3">Xin chào <strong><%= user.username %></strong></span>
        <% if (user.isAdmin) { %>
          <a href="/admin/products" class="btn btn-warning me-2">ADMIN PANEL</a>
        <% } %>
        <a href="/auth/logout" class="btn btn-outline-light">Đăng xuất</a>
      <% } else { %>
        <a href="/auth/login" class="btn btn-outline-light me-2">Đăng nhập</a>
        <a href="/auth/register" class="btn btn-light">Đăng ký</a>
      <% } %>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <!-- ALERT -->
  <% if (success) { %>
    <div class="alert alert-success alert-dismissible fade show">
      <%= success %> <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  <% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show">
      <%= error %> <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <!-- ADMIN BUTTON -->
  <% if (user && user.isAdmin) { %>
    <div class="text-center mb-5 p-4 bg-white rounded shadow">
      <h1 class="text-danger mb-3">ADMIN ĐANG QUẢN LÝ</h1>
      <a href="/admin/products/add" class="btn btn-success btn-lg px-5">THÊM SẢN PHẨM MỚI</a>
    </div>
  <% } %>

  <!-- FORM THÊM SẢN PHẨM -->
<% if (typeof showAddForm !== 'undefined' && showAddForm) { %>
<div class="container my-5">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="text-success text-center">THÊM SẢN PHẨM MỚI</h2>
      <form action="/admin/products/save" method="POST" class="row g-3">
        <div class="col-md-6"><input name="name" class="form-control" placeholder="Tên sản phẩm" required></div>
        <div class="col-md-6"><input name="price" type="number" class="form-control" placeholder="Giá" required></div>
        <div class="col-12"><input name="image" class="form-control" placeholder="Link ảnh[](https://...)" required></div>
        <div class="col-12"><textarea name="description" class="form-control" rows="3" placeholder="Mô tả"></textarea></div>
        <div class="text-center">
          <button class="btn btn-success btn-lg px-5">THÊM NGAY</button>
          <a href="/admin/products" class="btn btn-secondary btn-lg px-5">HỦY</a>
        </div>
      </form>
    </div>
  </div>
</div>
<% } %>

<!-- FORM SỬA SẢN PHẨM -->
<% if (typeof editProduct !== 'undefined' && editProduct) { %>
<div class="container my-5">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="text-warning text-center">SỬA SẢN PHẨM</h2>
      <form action="/admin/products/save" method="POST" class="row g-3">
        <input type="hidden" name="id" value="<%= editProduct._id %>">
        <div class="col-md-6"><input name="name" class="form-control" value="<%= editProduct.name %>" required></div>
        <div class="col-md-6"><input name="price" type="number" class="form-control" value="<%= editProduct.price %>" required></div>
        <div class="col-12"><input name="image" class="form-control" value="<%= editProduct.image %>" required></div>
        <div class="col-12"><textarea name="description" class="form-control" rows="3"><%= editProduct.description || '' %></textarea></div>
        <div class="text-center">
          <button class="btn btn-warning btn-lg px-5">CẬP NHẬT</button>
          <a href="/admin/products" class="btn btn-secondary btn-lg px-5">HỦY</a>
        </div>
      </form>
    </div>
  </div>
</div>
<% } %>

  <!-- DANH SÁCH SẢN PHẨM -->
  <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    <% if (!products || products.length === 0) { %>
      <div class="col-12 text-center py-5">
        <h2 class="text-white">Chưa có sản phẩm nào!</h2>
        <% if (user && user.isAdmin) { %>
          <a href="/admin/products/add" class="btn btn-success btn-lg mt-3">Thêm ngay</a>
        <% } %>
      </div>
    <% } else { %>
      <% products.forEach(p => { %>
        <div class="col">
          <div class="card h-100 bg-white text-dark">
            <img src="<%= p.image %>" onerror="this.src='https://via.placeholder.com/300x250/667eea/ffffff?text=No+Image'" class="card-img-top">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-center"><%= p.name %></h5>
              <p class="price text-center"><%= Number(p.price).toLocaleString('vi-VN') %>đ</p>
              <div class="mt-auto text-center">
                <a href="/product/<%= p._id %>" class="btn btn-outline-primary">Xem chi tiết</a>
                <% if (user && user.isAdmin) { %>
                  <div class="mt-2 d-grid gap-2">
                    <a href="/admin/products/edit/<%= p._id %>" class="btn btn-warning btn-sm">SỬA</a>
                    <form action="/admin/products/delete/<%= p._id %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Xóa thật hả đại ca?')">XÓA</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>